<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content" >
    
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/iv_check_bg"
        android:id="@+id/iv_check_list_item"
        />
    
    <ImageView 
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/iv_check_list_item"
        android:background="@drawable/ic_launcher"
        android:id="@+id/iv_icon_list_item"
        />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="88888"
        android:textSize="20sp"
        android:layout_toRightOf="@id/iv_icon_list_item"
        android:textColor="#000000"
        android:id="@+id/tv_address_list_item"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_address_list_item"
        android:text="i am body"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/iv_icon_list_item"
        android:textSize="16sp"
        android:textColor="#000000"
        android:id="@+id/tv_body_list_item"
        />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015/11/12"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_date_list_item"
        />

</RelativeLayout>