<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/tv_receive_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/receive_msg_bubble"
            android:text="asodifjaasodifjaasodifjaodifjaasodifjaodifjaasodifjaasodifjaasodifja"
            android:textColor="#000" />

        <TextView
            android:id="@+id/tv_receive_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="2015/11/11"
            android:textColor="#000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal" >

         <TextView
             android:id="@+id/tv_send_date"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:gravity="bottom"
             android:text="2015/11/11"
             android:textColor="#000" />

        <TextView
            android:id="@+id/tv_send_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/send_msg_bubble"
            android:text="asodifjaasaasodifjaasaasodifjaasaasodifjaasaasodifjaasaasodifjaasa"
            android:textColor="#000" />
       
    </LinearLayout>
    
    
</LinearLayout>